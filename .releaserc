branches:
    - "main"
plugins:
    - "@semantic-release/commit-analyzer"
    - "@semantic-release/release-notes-generator"
    - "@semantic-release/changelog"
    - - "@semantic-release/exec"
      - prepareCmd: "sh ./.github/scripts/bump_project_version.sh ${nextRelease.version}"
    - - "@semantic-release/git"
      - assets:
          - pyproject.toml
        message: "chore(auto-trigger): bumped project version to ${nextRelease.version} [skip ci]"
    - "@semantic-release/github"
